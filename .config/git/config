[core]
        # デフォルトのエディタを Vim に設定する
        editor = vim

        # ファイルの大文字・小文字を区別して認識する
        ignorecase = false

        # 2 バイト文字列のエスケープ処理を行わない
        # git status 送信時に日本語のファイル名を正常に表示させるため
        quotepath = false

[credential]
        # ID, PASS を聞かれる頻度を減らすためキャッシュしておく設定
        helper = wincred

[diff]
        # 差分表示のアルゴリズムを histogram へ変更して見やすくする
        algorithm = histogram

        # 移動のみの差分はグレーで表示する
        colorMoved = dimmed-zebra

[grep]
        # git grep 実行時に行番号を表示する
        lineNumber = true

[init]
        # デフォルトブランチ名を main へ設定する
        defaultBranch = main

[include]
        # 環境特有の設定を読み込み
        path = ~/.config/git/local

[log]
        # 日付を ISO 8601 (2023-01-01 09:00:00 +0900) で表示する
        date = iso-local

[push]
        # カレントブランチと同名のリモートブランチが存在する場合のみカレントブランチのプッシュを行う
        default = simple
