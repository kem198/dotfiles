
// VSCode の設定ファイル。
// User 内のファイルを VSCode のディレクトリへシンボリックリンクとして配置する。

// ▼ Windows
// CMD の mklink コマンドで設定。.setup/bat/mklink.bat にまとめて記載。

// ▼ Mac
// > ln -sf ~/dotfiles/.config/Code/User/settings.json ~/Library/"Application Support"/Code/User/
// > ln -sf ~/dotfiles/.config/Code/User/keybindings.json ~/Library/"Application Support"/Code/User/
// > ln -sf ~/dotfiles/.config/Code/Markdown_Preview_Enhanced/style.less ~/.local/state/mume/

{
    // "python.pythonPath": "/usr/local/bin/python3"
    "python.pythonPath": "/Users/.pyenv/shims/python", 
    "workbench.colorTheme": "Solarized Dark",
    "editor.fontFamily": "'Ricty Diminished Discord' ,Menlo, Monaco, 'Courier New', monospace",
    "terminal.integrated.fontSize": 15,
    "terminal.integrated.shell.osx": "/bin/zsh",
    "terminal.integrated.fontFamily": "HackGenNerd Console",
    "terminal.external.osxExec": "iTerm.app",
    "terminal.integrated.shell.linux": "/bin/zsh",
    "dotfiles.repository": "https://github.com/kenkenpa198/dotfiles.git",
    "dotfiles.installCommand": "~/dotfiles/.bin/install_rc.sh",
    "window.newWindowDimensions": "inherit",
    "workbench.editorAssociations": {
        "*.ipynb": "jupyter.notebook.ipynb"
    },
    "python.defaultInterpreterPath": "/Users/.pyenv/shims/python",
    "editor.renderWhitespace": "trailing",
    "explorer.confirmDragAndDrop": false,
    "security.workspace.trust.untrustedFiles": "open",
    "redhat.telemetry.enabled": true,
    "editor.fontSize": 16

}