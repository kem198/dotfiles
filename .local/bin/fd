#!/bin/bash
set -euo pipefail

DICT_URL="https://raw.githubusercontent.com/kujirahand/EJDict/master/src/"
DICT_DIR="$HOME/.fd"
DICT_FILE="$DICT_DIR/dict.txt"

# ヘルプを表示する関数
function print_usage() {
    cat << help_msg
fzf-dictionary v0.2.0
This is the English-Japanese dictionary with fzf.

USAGE:
  fd            Look up word
  fd [word]     Look up word with input

OPTIONS:
  --init        Download dict file
  -h, --help    Display usage

DICT SOURCE:
  https://github.com/kujirahand/EJDict
help_msg
}

# 辞書ファイルを作成する関数
function create_dict() {
    echo "Create dict file to:"
    echo "$DICT_FILE"
    echo ""

    mkdir -p "$DICT_DIR"

    # 既存の辞書ファイルを削除する
    rm --force "$DICT_FILE"

    for file in {a..z}.txt; do
        # curl が失敗したらエラーメッセージを表示する
        if ! curl --fail "${DICT_URL}${file}" >> "$DICT_FILE"; then
            echo "Error: Failed to download ${file}. Exiting."
            exit 1
        fi
    done

    echo ""
    echo "Created dict file:"
    echo "$DICT_FILE"
}

# 単語を検索する関数
function find_word() {
    local word=${1:-""}

    # 辞書ファイルが存在しない場合は --init を促す
    if [[ ! -f "$DICT_FILE" ]]; then
        echo "The dictionary file was not found. Please run 'fd --init' to create the dictionary file."
        exit 1
    fi

    fzf --exact --tiebreak=begin --prompt="📖 > " --query="$word" < "$DICT_FILE"
}

# メイン関数
function main() {
    if (( $# == 0 )); then
        find_word
        exit 0
    fi

    # 渡された引数で処理を分岐する
    case "$1" in
        -h | --help )
            print_usage
            ;;

        --init )
            create_dict
            ;;

        * )
            find_word "$1"
            ;;
    esac
}

main "$@"
